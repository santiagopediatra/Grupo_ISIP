 <!-- JavaScript mejorado -->
 <script>// <![CDATA[
  function scrollCarousel(direction) {
   var carousel = document.getElementById('newsCarousel');
   if (!carousel) return;

   var cardWidth = carousel.querySelector('div').offsetWidth + 16; // ancho + gap
   var scrollAmount = cardWidth * direction;

   carousel.scrollBy({
    left: scrollAmount,
    behavior: 'smooth'
   });

   // Actualizar indicadores después del scroll
   setTimeout(updateIndicators, 300);
  }

  // Crear indicadores automáticamente
  function createIndicators() {
   var carousel = document.getElementById('newsCarousel');
   var indicators = document.getElementById('indicators');
   var cards = carousel.querySelectorAll('div');

   cards.forEach(function(_, index) {
    var dot = document.createElement('span');
    dot.style.cssText = 'width: 10px; height: 10px; border-radius: 50%; background: rgba(255,255,255,0.5); cursor: pointer; transition: background 0.3s;';
    if (index === 0) dot.style.background = 'rgba(255,255,255,0.9)';

    dot.onclick = function() {
     var cardWidth = carousel.querySelector('div').offsetWidth + 16;
     carousel.scrollTo({
      left: cardWidth * index,
      behavior: 'smooth'
     });
     setTimeout(updateIndicators, 300);
    };

    indicators.appendChild(dot);
   });
  }

  // Actualizar indicadores activos
  function updateIndicators() {
   var carousel = document.getElementById('newsCarousel');
   var indicators = document.getElementById('indicators');
   var cardWidth = carousel.querySelector('div').offsetWidth + 16;
   var currentIndex = Math.round(carousel.scrollLeft / cardWidth);

   Array.from(indicators.children).forEach(function(dot, index) {
    dot.style.background = index === currentIndex ? 'rgba(255,255,255,0.9)' : 'rgba(255,255,255,0.5)';
   });
  }

  // Inicializar cuando carga la página
  document.addEventListener('DOMContentLoaded', function() {
   createIndicators();

   // Actualizar indicadores al hacer scroll manual
   var carousel = document.getElementById('newsCarousel');
   carousel.addEventListener('scroll', function() {
    clearTimeout(this.scrollTimer);
    this.scrollTimer = setTimeout(updateIndicators, 100);
   });
  });

  // Fallback si DOMContentLoaded ya pasó
  if (document.readyState === 'loading') {
   document.addEventListener('DOMContentLoaded', createIndicators);
  } else {
   createIndicators();
  }
  // ]]></script>
</div>
